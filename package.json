{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "yarn clean && lerna run build",
    "build:changed": "lerna run --since origin/master --include-dependents build",
    "test": "lerna run test",
    "fmt": "prettier --write .",
    "clean": "lerna run --parallel clean"
  },
  "workspaces": [
    "common/*",
    "contract/*",
    "integrations/*"
  ]
}
